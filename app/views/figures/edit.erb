<h2>Edit <%=@figures.name%></h2>

<form action="/figures/<%=@figures.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Figure's Name</label>
  <input type="text" name="figure[name]" value="<%=@figures.name%>" id="figure_name"> <br>

  <label> Figures Title</label>
  <%Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
  <%=title.name%>
  <% end %>
  <br>

  <label for="title">Create a New Title </label>
  <input type="text" name="title[name]" id="new_title"><br>

  <label for="">Landmarks ID</label>
  <% Landmark.all.each do |landmark| %>
  <input  id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%landmark.id%>" <%= 'checked' if @figures.landmarks.include?(landmark) %>>
  <%landmark.name%>
  <%end%>
  <br>
  <label for="landmark[name]">New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit"  value="Edit Figure">

</form>
