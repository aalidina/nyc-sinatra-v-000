    <h2>Create New Figure</h2>
    <form action="/figures" method="post">

      <label for="figure[name]"></label>
      <input type="text" name="figure[name]" value="Figure Name" id="figure_name"> <br>

      <label> Figures Title</label>
      <%Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
      <%=title.name%>
      <% end %>
      <br>

      <label for="title[name]">Create a New Title </label>
      <input type="text" name="title[name]" id="new_title"><br>

      <label for="figure[landmark_ids]"></label>
      <input type="text" name="figure[landmark_ids][]" value="Landmark ID"><br>

      <label for="landmark[name]"></label>
      <input type="text" name="landmark[name]" value="Landmark Name"><br>

      <input type="submit" name="submit" value="Create New Figure">

    </form>
